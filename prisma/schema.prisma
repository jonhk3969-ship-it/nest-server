datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  USER
  AGENT
  ADMIN
}

enum TransactionType {
  DEPOSIT
  WITHDRAW
  BET
  SETTLE
  REFUND
  CANCEL
  ROLLBACK
}

model Admin {
  id        String   @id @map("_id") @default(auto()) @db.ObjectId
  username  String   @unique
  password  String
  role      Role     @default(ADMIN)
  status    Boolean  @default(true)
  rank      Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Agent {
  id          String        @id @map("_id") @default(auto()) @db.ObjectId
  username    String        @unique
  nickName    String?       @unique
  password    String
  showpassword String?
  agentname   String?
  amount      Float         @default(0.0)
  role        Role          @default(AGENT)
  percent     Float
  maxNumUser  Int           @default(50)
  status      Boolean       @default(true)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  users       User[]
  history     AgentHistory[]
  userHistory UserHistory[]

  @@index([status])
}

model User {
  id        String        @id @map("_id") @default(auto()) @db.ObjectId
  username  String        @unique
  password  String
  showpassword String?
  amount    Float         @default(0.0)
  spin      Int           @default(0)
  role      Role          @default(USER)
  agentId   String        @db.ObjectId
  agent     Agent         @relation(fields: [agentId], references: [id])
  delete    Boolean       @default(false)
  status    Boolean       @default(true)
  isOnline  Boolean       @default(false)
  ip        String?
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  history   UserHistory[]
  betTransactions BetTransaction[]

  @@index([agentId])
  @@index([status])
}

model AgentHistory {
  id            String          @id @map("_id") @default(auto()) @db.ObjectId
  agentId       String          @db.ObjectId
  agent         Agent           @relation(fields: [agentId], references: [id])
  amount        Float
  before_amount Float
  after_amount  Float
  type          TransactionType
  date          DateTime?       @default(now())
  status        Boolean         @default(true)
}

model UserHistory {
  id            String          @id @map("_id") @default(auto()) @db.ObjectId
  userId        String          @db.ObjectId
  user          User?           @relation(fields: [userId], references: [id])
  agentId       String          @db.ObjectId
  agent         Agent           @relation(fields: [agentId], references: [id])
  amount        Float
  before_amount Float
  after_amount  Float
  type          TransactionType
  transactionId String?         @unique
  date          DateTime?       @default(now())
  status        Boolean         @default(true)
}

model BetTransaction {
  id            String          @id @map("_id") @default(auto()) @db.ObjectId
  userId        String          @db.ObjectId
  user          User?           @relation(fields: [userId], references: [id])
  username      String
  agentId       String          @db.ObjectId
  productId     String
  gameCode      String
  type          TransactionType // BET, SETTLE, etc.
  
  // Amounts
  betAmount     Float           @default(0)
  payoutAmount  Float           @default(0)
  netAmount     Float           @default(0) // Payout - Bet (Profit/Loss)

  // Identifiers
  transactionId String          @unique // Provider's specific Txn ID
  roundId       String?         // Provider's Round ID
  betId         String?         // For linking Settle back to Bet (if needed)

  // Status
  status        String          // PENDING, SETTLED, CANCELLED, ROLLEDBACK
  playInfo      String?         // Extra info provided by game
  
  // Timestamps
  transactionTime DateTime 
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt

  @@index([username])
  @@index([agentId])
  // transactionId is already @unique, so index is redundant but harmless usually. 
  // However, error said "Index already exists". @unique creates an index.
  // So we remove explicit @@index([transactionId]) to be safe.
  
  @@index([roundId])
  @@index([createdAt])
}

model SystemConfig {
  id          String   @id @map("_id") @default(auto()) @db.ObjectId
  isMaintenanceMode Boolean @default(false)
  updatedAt   DateTime @updatedAt
}

model Post {
  id          String   @id @map("_id") @default(auto()) @db.ObjectId
  title       String
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum CategoryCode {
  EGAMES
  LIVECASINO
  SPORT
  POKER
}

model Provider {
  id           String         @id @default(auto()) @map("_id") @db.ObjectId

  productId    String         @unique                 // REDTIGER, AFB1188
  productName  String                                  // Red Tiger Gaming
  img          String                                  // provider logo (URL)

  status       Boolean        @default(true)
  category     CategoryCode                            // chá»‰ 1 category
  rank         Int            @default(0)

  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt

  @@index([status])
  @@index([category])
}

model Banner {
  id           String         @id @default(auto()) @map("_id") @db.ObjectId

  bannerName   String
  img          String         // banner image (URL)
  status       Boolean        @default(true)

  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt

  @@index([status])
}
